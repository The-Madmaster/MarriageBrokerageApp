{
    "name": "Full-Stack (Spring Boot & React) Development Environment",
    "image": "mcr.microsoft.com/devcontainers/universal:latest",
    "features": {
        "ghcr.io/devcontainers/features/java:1": {
            "version": "21",
            "installMaven": "true",
            "installGradle": "false"
        },
        "ghcr.io/devcontainers/features/node:1": {
            "version": "20"
        }
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "vscjava.vscode-java-pack",
                "Pivotal.vscode-boot-dashboard",
                "redhat.vscode-xml",
                "vmware.vscode-spring-boot",
                "Pivotal.vscode-boot-devtools",
                "vmware.vscode-boot-language-support",
                "ms-vscode.vscode-typescript-react-extension",
                "dbaeumer.vscode-eslint",
                "visualstudio.vscode-intellicode",
                "redhat.java",
                "vscjava.vscode-maven"
            ],
            "settings": {
                // ðŸ‘‡ UPDATE THIS PATH with the actual path you found!
                "java.jdt.ls.java.home": "/path/to/your/java-21-installation",
                "java.configuration.runtimes": [
                    {
                        "name": "JavaSE-21",
                        // ðŸ‘‡ UPDATE THIS PATH as well!
                        "path": "/path/to/your/java-21-installation",
                        "default": true
                    }
                ]
            }
        }
    },
    "forwardPorts": [8080, 3000],
    // You should remove or adjust the postCreateCommand if the 'update-alternatives' and export commands
    // are trying to set a path that doesn't exist. It's often better to rely on the feature for JAVA_HOME.
    "postCreateCommand": "npm install -g npm@latest && ./mvnw clean install -DskipTests && npm install --prefix marriage-bureau-frontend || true",
    "remoteUser": "codespace"
}